---
import Layout from "@/layouts/Layout.astro";
import { type CollectionEntry, getCollection } from "astro:content";

type BlogPost = CollectionEntry<"blog">;

const posts = (await getCollection("blog")).sort(
    (a: BlogPost, b: BlogPost) =>
        b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<Layout
    title="Blog | Adam Daniam - Web & AI Developer"
    description="Tulisan dan panduan seputar Web Development, Integrasi AI, dan Teknologi Desktop Modern."
>
    <section class="min-h-screen pt-32 pb-24 md:pt-48 border-b border-black/10">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 w-full">
            <div class="mb-16 md:mb-24">
                <h1
                    class="font-display text-6xl md:text-8xl lg:text-9xl font-semibold tracking-tighter leading-[0.9] text-black mb-6 uppercase"
                >
                    Blog &<br />Insights
                </h1>
                <p
                    class="text-xl md:text-2xl text-gray-600 font-light max-w-2xl"
                >
                    Tulisan tentang Web Development modern, eksplorasi AI, dan
                    praktik terbaik rekayasa perangkat lunak.
                </p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                {
                    posts.map((post: BlogPost) => (
                        <a
                            href={`/blog/${post.slug}/`}
                            class="group flex flex-col border border-black/10 hover:border-black transition-colors duration-300"
                        >
                            <div class="aspect-[16/10] overflow-hidden bg-gray-100 border-b border-black/10">
                                {post.data.heroImage && (
                                    <img
                                        src={post.data.heroImage}
                                        alt={post.data.title}
                                        class="w-full h-full object-cover grayscale contrast-125 group-hover:grayscale-0 transition-all duration-500"
                                        loading="lazy"
                                    />
                                )}
                            </div>
                            <div class="p-8 flex flex-col flex-grow">
                                <div class="font-mono text-xs uppercase tracking-widest text-gray-600 mb-4">
                                    <time
                                        datetime={post.data.pubDate.toISOString()}
                                    >
                                        {post.data.pubDate.toLocaleDateString(
                                            "id-ID",
                                            {
                                                year: "numeric",
                                                month: "long",
                                                day: "numeric",
                                            },
                                        )}
                                    </time>
                                </div>
                                <h2 class="font-display text-2xl font-medium mb-4 uppercase leading-tight group-hover:text-gray-600 transition-colors">
                                    {post.data.title}
                                </h2>
                                <p class="text-gray-600 font-light leading-relaxed mb-8 flex-grow">
                                    {post.data.description}
                                </p>
                                <div class="inline-flex items-center text-sm font-medium uppercase tracking-wide group-hover:text-gray-500 transition-colors mt-auto pt-4 border-t border-black/10">
                                    Baca Artikel
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        width="24"
                                        height="24"
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="currentColor"
                                        stroke-width="2"
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        class="ml-2 size-4 transition-transform group-hover:translate-x-1"
                                    >
                                        <path d="M5 12h14" />
                                        <path d="m12 5 7 7-7 7" />
                                    </svg>
                                </div>
                            </div>
                        </a>
                    ))
                }
            </div>
        </div>
    </section>
</Layout>
