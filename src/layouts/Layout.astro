---
import "../styles/globals.css";

interface Props {
	title?: string;
	description?: string;
}

const { title = "Create Next App", description = "Generated by create next app" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content={description} />
	</head>
	<body class="antialiased">
		<slot />
	</body>
</html>

<style is:global>
	:root {
		--font-geist-sans: "Geist", "Inter", system-ui, sans-serif;
		--font-geist-mono: "Geist Mono", "Fira Code", monospace;
	}
</style>
