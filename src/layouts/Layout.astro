---
import "../styles/globals.css";
import "@fontsource/geist-sans";
import "@fontsource/geist-mono";
import { Navbar } from "@/components/ui/navbar";
import { Footer } from "@/components/ui/footer";

interface Props {
	title?: string;
	description?: string;
}

const { title = "Create Next App", description = "Generated by create next app" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- SEO Meta Tags -->
		<title>Adam Daniam - Web & AI Developer</title>
		<meta name="description" content="Web Developer & AI Enthusiast building modern web experiences and exploring how AI can be integrated into real, usable products." />
		<meta name="keywords" content="web developer, ai developer, react developer, nextjs developer, ai solutions, web development indonesia" />
		<meta name="author" content="Adam Daniam" />
		<link rel="canonical" href="https://adamdaniam.com" />

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://adamdaniam.com" />
		<meta property="og:title" content="Adam Daniam - Web & AI Developer" />
		<meta property="og:description" content="Web Developer & AI Enthusiast building modern web experiences and exploring how AI can be integrated into real, usable products." />
		<meta property="og:image" content="/og-image.png" />

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content="https://adamdaniam.com" />
		<meta property="twitter:title" content="Adam Daniam - Web & AI Developer" />
		<meta property="twitter:description" content="Web Developer & AI Enthusiast building modern web experiences and exploring how AI can be integrated into real, usable products." />
		<meta property="twitter:image" content="/og-image.png" />

		<!-- Performance Optimizations -->
		<link rel="preconnect" href="https://cdn.jsdelivr.net" />
		<link rel="preconnect" href="https://images.unsplash.com" />
		<link rel="preconnect" href="https://cdn.simpleicons.org" />
		
		<!-- Structured Data (JSON-LD) -->
		<script type="application/ld+json">
			{
				"@context": "https://schema.org",
				"@graph": [
					{
						"@type": "Person",
						"@id": "#person",
						"name": "Adam Daniam",
						"jobTitle": "Web & AI Developer",
						"url": "https://adamdaniam.com",
						"image": "https://adamdaniam.com/og-image.png",
						"sameAs": [
							"https://github.com/adamdaniam",
							"https://linkedin.com/in/adamdaniam"
						]
					},
					{
						"@type": "WebSite",
						"name": "Adam Daniam Portfolio",
						"url": "https://adamdaniam.com",
						"publisher": { "@id": "#person" }
					},
					{
						"@type": "ProfilePage",
						"mainEntity": { "@id": "#person" }
					}
				]
			}
		</script>

		<script>
			if (import.meta.env.DEV) {
				import("react-grab");
			}
		</script>
	</head>
	<body class="antialiased">
		<Navbar client:load />
		<main>
			<slot />
		</main>
		<Footer />
	</body>
</html>

<style is:global>
	:root {
		--font-geist-sans: "Geist Sans", "Inter", system-ui, sans-serif;
		--font-geist-mono: "Geist Mono", "Fira Code", monospace;
	}
</style>
