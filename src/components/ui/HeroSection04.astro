---
import { siteConfig } from "@/config/site";

const stats = [
    { label: "Experience", value: "1+" },
    { label: "Projects", value: "2+" },
    { label: "Based In", value: "Indonesia" },
];

const description = siteConfig.hero.description;
---

<section
    class="relative min-h-screen pt-20 flex flex-col justify-between border-b border-black/10 bg-white overflow-hidden"
>
    {/* Background Grid Lines */}
    <div
        class="absolute inset-0 z-0 pointer-events-none flex justify-between px-4 sm:px-6 lg:px-8 max-w-7xl mx-auto w-full"
    >
        <div class="h-full w-px bg-black/5 hidden md:block"></div>
        <div class="h-full w-px bg-black/5 hidden md:block"></div>
        <div class="h-full w-px bg-black/5 hidden md:block"></div>
    </div>

    <div
        class="relative z-10 flex-grow flex flex-col justify-center px-4 sm:px-6 lg:px-8 max-w-7xl mx-auto w-full py-20"
    >
        <div
            class="max-w-5xl animate-in fade-in slide-in-from-bottom-12 duration-1000 ease-out fill-mode-both"
        >
            <div class="mb-6 flex items-center space-x-2">
                <span class="w-2 h-2 bg-black rounded-full animate-pulse"
                ></span>
                <span
                    class="font-mono text-xs uppercase tracking-widest text-gray-600"
                >
                    System Online â€” {siteConfig.year}
                </span>
            </div>

            <h1
                class="font-display text-6xl md:text-8xl lg:text-9xl font-semibold tracking-tighter leading-[0.9] text-black mb-12 uppercase"
            >
                {siteConfig.hero.headline}
                <br />
                <span class="text-gray-600">{siteConfig.hero.subheadline}</span>
            </h1>

            <div
                class="max-w-xl text-lg md:text-xl font-light leading-relaxed text-gray-800 space-y-2"
            >
                {
                    Array.isArray(description) ? (
                        description.map((line) => <p>{line}</p>)
                    ) : (
                        <p>{description}</p>
                    )
                }
            </div>
        </div>
    </div>

    <div class="relative z-10 border-t border-black/10 bg-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 w-full">
            <div
                class="grid grid-cols-2 md:grid-cols-3 divide-x divide-black/10"
            >
                {
                    stats.map((stat, i) => (
                        <div
                            class:list={[
                                "py-8",
                                i === 0 ? "pl-0" : "pl-6",
                                i === 2 ? "pr-0" : "pr-6",
                            ]}
                        >
                            <p class="font-mono text-xs text-gray-600 uppercase tracking-wider mb-2">
                                {stat.label}
                            </p>
                            <p class="font-display text-3xl md:text-4xl font-medium">
                                {stat.value}
                            </p>
                        </div>
                    ))
                }
            </div>
        </div>
    </div>
</section>
