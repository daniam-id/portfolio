---
import { siteConfig } from "@/config/site";

const currentYear = new Date().getFullYear();
const navLinks = siteConfig.navLinks;
const socialLinks = siteConfig.socialLinks;
---

<footer class="bg-black text-white py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 w-full">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-16 md:gap-32">
            <div>
                <h2
                    class="font-display text-4xl md:text-5xl font-bold tracking-tighter leading-none mb-8 uppercase"
                >
                    ADAM DANIAM.
                </h2>
                <p class="text-gray-400 text-xl font-light max-w-md">
                    Always exploring new technologies and open to interesting
                    conversations.
                </p>
            </div>

            <div class="flex flex-col justify-between">
                <div class="grid grid-cols-2 gap-12">
                    <div>
                        <h3
                            class="font-mono text-xs uppercase text-gray-400 mb-6 tracking-widest"
                        >
                            Menu
                        </h3>
                        <ul class="space-y-4 font-display text-xl">
                            {
                                navLinks.map((link) => (
                                    <li>
                                        <a
                                            href={link.href}
                                            class="hover:text-gray-400 transition-colors"
                                        >
                                            {link.name}
                                        </a>
                                    </li>
                                ))
                            }
                        </ul>
                    </div>
                    <div>
                        <h3
                            class="font-mono text-xs uppercase text-gray-400 mb-6 tracking-widest"
                        >
                            Connect
                        </h3>
                        <ul class="space-y-4 font-display text-xl">
                            {
                                socialLinks.map((link) => (
                                    <li>
                                        <a
                                            href={link.href}
                                            target="_blank"
                                            rel="noopener noreferrer"
                                            class="hover:text-gray-400 transition-colors"
                                        >
                                            {link.name}
                                        </a>
                                    </li>
                                ))
                            }
                        </ul>
                    </div>
                </div>

                <div
                    class="mt-16 md:mt-0 pt-8 border-t border-white/20 flex flex-col md:flex-row justify-between items-start md:items-center text-xs text-gray-500 font-mono uppercase tracking-wide"
                >
                    <span
                        >Â© {currentYear} All rights reserved. Built with Astro.</span
                    >
                </div>
            </div>
        </div>
    </div>
</footer>
