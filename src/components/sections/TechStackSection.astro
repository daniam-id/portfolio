---
const stack = [
    {
        category: "Frontend",
        items: [
            {
                name: "React",
                icon: "/icons/react.svg",
            },
            {
                name: "Next.js",
                icon: "/icons/next-js.svg",
            },
            {
                name: "Astro",
                icon: "/icons/astro.svg",
            },
            {
                name: "TypeScript",
                icon: "/icons/typescript.svg",
            },
            {
                name: "Tailwind",
                icon: "/icons/tailwind.svg",
            },
            {
                name: "Framer",
                icon: "/icons/framer.svg",
            },
        ],
    },
    {
        category: "Backend",
        items: [
            {
                name: "Node.js",
                icon: "/icons/node-js.svg",
            },
            {
                name: "Python",
                icon: "/icons/python.svg",
            },
            {
                name: "Supabase",
                icon: "/icons/supabase.svg",
            },
            {
                name: "PostgreSQL",
                icon: "/icons/postgresql.svg",
            },
            {
                name: "Firebase",
                icon: "/icons/firebase.svg",
            },
        ],
    },
    {
        category: "AI & Tools",
        items: [
            {
                name: "OpenAI",
                icon: "/icons/openai.svg",
            },
            {
                name: "Figma",
                icon: "/icons/figma.svg",
            },
            {
                name: "Git",
                icon: "/icons/git.svg",
            },
            {
                name: "Vercel",
                icon: "/icons/vercel.svg",
            },
            {
                name: "Docker",
                icon: "/icons/docker.svg",
            },
        ],
    },
];
---

<section class="py-24 md:py-32 border-b border-black/10 scroll-mt-24" id="tech">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 w-full">
        <div class="grid grid-cols-1 md:grid-cols-12 gap-12">
            <div class="md:col-span-3">
                <div
                    class="flex items-baseline space-x-3 font-display text-xs md:text-sm font-medium tracking-widest text-gray-500 uppercase mb-8 md:mb-0"
                >
                    <span class="text-black">04</span>
                    <span class="h-px w-8 bg-black/20 inline-block"></span>
                    <span>Tech</span>
                </div>
            </div>
            <div class="md:col-span-9">
                <div class="mb-16 max-w-3xl">
                    <h2
                        class="font-display text-3xl md:text-5xl font-light leading-tight uppercase mb-6"
                    >
                        Tech Stack
                    </h2>
                    <p class="text-xl text-gray-800 font-light leading-relaxed">
                        The tools and technologies I use to bring ideas to life.
                        Always learning and exploring new things.
                    </p>
                </div>

                <div class="grid md:grid-cols-3 gap-12">
                    {
                        stack.map((group) => (
                            <div>
                                <h3 class="font-mono text-xs uppercase text-gray-500 mb-6 tracking-widest border-b border-black/10 pb-2">
                                    {group.category}
                                </h3>
                                <div class="space-y-4">
                                    {group.items.map((item) => (
                                        <div class="flex items-center gap-3 group cursor-default">
                                            <img
                                                src={item.icon}
                                                alt={item.name}
                                                width={20}
                                                height={20}
                                                class="size-5 grayscale group-hover:grayscale-0 transition-all"
                                                loading="lazy"
                                            />
                                            <span class="font-display text-lg font-light text-gray-800 group-hover:text-black transition-colors">
                                                {item.name}
                                            </span>
                                        </div>
                                    ))}
                                </div>
                            </div>
                        ))
                    }
                </div>
            </div>
        </div>
    </div>
</section>
